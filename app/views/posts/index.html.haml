- @posts.each do |post|
  = render 'users/h_card', user: post.user do
    .card-body
      .card-text{ dir: :auto }= simple_format(post.message)
    .card-footer
      = link_to post, class: 'card-link' do
        %i.align-middle{"data-feather" => "eye"}
        view

      = link_to post.permalink_url, class: 'card-link', target: :_blank do
        %i.align-middle{"data-feather" => "external-link"}
        On Facebook

- if @next_page
  = link_to "Next page", posts_path(before: @next_page), class: 'btn btn-primary btn-lg btn-block'
